<%- if notice.present? %>
  <p
    class="alert alert-success alert-dismissible fade show"
    role="alert"
  >
    <%= notice %>
    <%= button_tag '',
                  type: "button",
                  class: "btn-close",
                  data: { 'bs-dismiss': "alert" },
                  aria: { label: "Close" }
    %>
  </p>
<%- end %>

<%- if alert.present? %>
  <p
    class="alert alert-danger alert-dismissible fade show"
    role="alert"
  >
    <%= alert %>
    <%= button_tag '',
                  type: "button",
                  class: "btn-close",
                  data: { 'bs-dismiss': "alert" },
                  aria: { label: "Close" }
    %>
  </p>
<%- end %>
