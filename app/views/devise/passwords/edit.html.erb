<h3><%= t :'titles.devise.passwords.edit'%></h3>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: t(:password, scope: :'activerecord.attributes.devise/passwords/edit'),
                required: true,
                autofocus: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: t(:password_confirmation, scope: :'activerecord.attributes.devise/passwords/edit'),
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,
                 t(:change_password, scope: 'helpers.submit'),
                 class: 'btn btn-primary'
    %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
