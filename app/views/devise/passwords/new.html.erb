<h3><%= t :'titles.devise.passwords.new' %></h3>

<%= simple_form_for(
  resource,
  as: resource_name,
  url: password_path(resource_name),
  html: { method: :post }
) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,
                 t(:send_password_instructions, scope: 'helpers.submit'),
                 class: 'btn btn-primary'
    %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
