<h3>
  <%= t 'titles.municipes.index' %>

  <%= link_to t(:'buttons.municipes.new'),
              new_municipe_path,
              class: 'btn btn-outline-secondary float-end'
  %>
</h3>

<div id="municipes table-responsive">
  <table class="table table-hover table-striped align-middle">
    <thead>
      <tr>
        <th><%= Municipe.human_attribute_name :id %></th>
        <th><%= Municipe.human_attribute_name :name %></th>
        <th><%= Municipe.human_attribute_name :email %></th>
        <th><%= Municipe.human_attribute_name :phone %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <%- municipes.each do |municipe| %>
      <tr>
        <td><%= adorne(municipe).id %></td>
        <td><%= adorne(municipe).name %></td>
        <td><%= adorne(municipe).email %></td>
        <td><%= adorne(municipe).phone %></td>
        <td>
          <%= link_to edit_municipe_path(municipe),
                      class: 'btn btn-secondary',
                      title: t(:'buttons.municipes.edit') do
          %>
            <i class="bi bi-pencil-square"></i>
          <%- end %>
        </td>
      </tr>
      <p>
      </p>
    <%- end %>
    </tbody>
  </table>
</div>

