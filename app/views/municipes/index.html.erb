<h3>
  <%= t 'titles.municipes.index' %>

  <%= link_to t(:'buttons.municipes.new'),
              new_municipe_path,
              class: 'btn btn-outline-secondary float-end'
  %>
</h3>

<div id="municipes table-responsive">
  <table class="table table-hover table-striped align-middle">
    <thead>
      <tr>
        <th>id</th>
        <th>name</th>
        <th>email</th>
        <th>phone</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <%- municipes.each do |municipe| %>
      <tr>
        <td><%= municipe.id %></td>
        <td><%= municipe.name %></td>
        <td><%= municipe.email %></td>
        <td><%= municipe.phone %></td>
        <td>
          <%= link_to municipe,
                      class: 'btn btn-secondary',
                      title: t(:'buttons.municipes.show') do
          %>
            <i class="bi bi-eye-fill"></i>
          <%- end %>
          <%= link_to edit_municipe_path(municipe),
                      class: 'btn btn-secondary',
                      title: t(:'buttons.municipes.edit') do
          %>
            <i class="bi bi-pencil-square"></i>
          <%- end %>
          <%= link_to municipe,
                      data: { turbo_method: :delete },
                      class: 'btn btn-danger',
                      title: t(:'buttons.municipes.destroy') do
          %>
            <i class="bi bi-trash3"></i>
          <%- end %>
          <%= link_to toggle_municipe_path(municipe),
                      data: { turbo_method: :patch },
                      class: 'btn btn-danger',
                      title: t(:'buttons.municipes.inactive') do
          %>
            <i class="bi bi-x-circle-fill"></i>
          <%- end %>
          <%= link_to toggle_municipe_path(municipe),
                      data: { turbo_method: :patch },
                      class: 'btn btn-success',
                      title: t(:'buttons.municipes.active') do
          %>
            <i class="bi bi-check-circle-fill"></i>
          <%- end %>
        </td>
      </tr>
      <p>
      </p>
    <%- end %>
    </tbody>
  </table>
</div>

